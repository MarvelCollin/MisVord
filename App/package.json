{
  "name": "miscvord-backend",
  "version": "1.0.0",
  "description": "Backend server for MiscVord voice chat application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "socket": "node socket-server.js",
    "dev:socket": "nodemon socket-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:socket\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
