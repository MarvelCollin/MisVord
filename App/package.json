{
  "name": "miscvord-backend",
  "version": "1.0.0",
  "description": "Backend server for MiscVord voice chat application",
  "main": "socket-server.js",
  "scripts": {
    "start": "node socket-server.js",
    "dev": "nodemon socket-server.js",
    "legacy:socket": "node socket-server.js",
    "test:vps": "node test-vps-connection.js",
    "deploy": "pm2 start socket-server.js --name misvord-socket",
    "stop": "pm2 stop misvord-socket",
    "restart": "pm2 restart misvord-socket",
    "status": "pm2 status misvord-socket",
    "logs": "pm2 logs misvord-socket"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
