{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start PHP Server",
			"type": "shell",
			"command": "php",
			"args": [
				"-S",
				"localhost:1001",
				"-t",
				"public",
				"public/router.php"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Socket Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/socket-server"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}