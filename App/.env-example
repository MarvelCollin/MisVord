# MiscVord Environment Configuration
# Copy this file to .env and adjust values

# Basic environment configuration
APP_ENV=local                # Use 'production' for VPS deployment
APP_DEBUG=true               # Set to 'false' in production

# Docker ports configuration
APP_PORT=1001
SOCKET_PORT=1002
SOCKET_SECURE_PORT=1443
DB_PORT=1003
PMA_PORT=1004
ADMINER_PORT=1005

# Database configuration
DB_HOST=db
DB_NAME=misvord
DB_USER=root
DB_PASS=password           # IMPORTANT: Change in production
DB_CHARSET=utf8mb4

# Socket server configuration
SOCKET_SERVER=http://socket-server:1002
SOCKET_SERVER_LOCAL=http://localhost:1002
SOCKET_PATH=/socket.io
SOCKET_API_KEY=kolin123    # IMPORTANT: Change in production
CORS_ALLOWED_ORIGINS=*     # Set to your domain in production

# VPS deployment specific
IS_VPS=false               # Set to 'true' for VPS deployment
USE_HTTPS=false            # Set to 'true' for HTTPS support
DOMAIN=localhost           # Change to your domain name
SUBPATH=misvord            # Subpath for deployment (e.g., misvord) 