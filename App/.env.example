# WebRTC Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment Type
IS_VPS=false
USE_HTTPS=false
DOMAIN=localhost

# Socket Server Ports
PORT=1002
SOCKET_PORT=1002
SOCKET_SECURE_PORT=1443

# Security
CORS_ALLOWED_ORIGINS=*

# Optional: Database Configuration (if needed)
# DB_HOST=localhost
# DB_NAME=webrtc_app
# DB_USER=
# DB_PASS=

# Optional: TURN/STUN Server Configuration (for NAT traversal)
# TURN_SERVER_URL=
# TURN_SERVER_USERNAME=
# TURN_SERVER_CREDENTIAL=

# Development Settings
DEBUG=true
DISABLE_DOTENV=false

# Production Example Settings:
# IS_VPS=true
# USE_HTTPS=true
# DOMAIN=your-domain.com
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
# DEBUG=false
